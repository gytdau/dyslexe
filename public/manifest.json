{
  "manifest_version": 2,
  "name": "Dyslex.ie",
  "description": "Dyslex.ie helps people with reading difficulties access web articles.",
  "version": "1.0.0",
  "background": {
    "scripts": ["/static/js/background.js"]
  },
  "browser_action": {
    "default_icon": "logo-128.png",
    "icons": {
      "16": "logo-16.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    }
  },
  "permissions": [
    "https://*/*",
    "activeTab",
    "storage",
    "tabs",
    "https://simple.wikipedia.org"
  ],
  "web_accessible_resources": ["static/fonts/*"]
}
